# Account
set realname = 'Fabio'
set from = 'wintermute@paranoici.org'

# il resto
set mbox_type=Maildir
set folder=~/mail
mailboxes =altro
mailboxes =debian
mailboxes =iscrizioni
mailboxes =personale
mailboxes =guerre_di_rete
mailboxes =golang
mailboxes =tor

set spoolfile=+Inbox
#set header_cache=~/.cache/mutt

# HTML handling
set mailcap_path = ~/.mutt/mailcap
auto_view text/html

# Appearance
source ~/.mutt/colori.muttrc

# misc
set sort=threads
set sort_aux=reverse-last-date-received

# Sidebar
set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats

bind index,pager \CP sidebar-prev
# Ctrl-Shift-P - Previous Mailbox
bind index,pager \CN sidebar-next
# Ctrl-Shift-N - Next Mailbox
bind index,pager \CO sidebar-open
# Ctrl-Shift-O - Open Mailbox
